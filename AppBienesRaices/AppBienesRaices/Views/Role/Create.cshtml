@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <div class="col-lg-6">
        <form role="form">
            <div class="form-group">
                <label for="Name">Entre el nombre del rol que desea crear</label>
                <input type="text" class="form-control" name="Name"/>
            </div>
            <input type="submit" value="Create Role" class="btn btn-default" />
        </form>
    </div>    
}
